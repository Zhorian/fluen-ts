{
	"env": {
		"es2021": true,
		"node": true,
		"serviceworker": true,
		"jest": true
	},
	"extends": [
		"airbnb-base"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": 12,
		"sourceType": "module",
		"project": [
			"./tsconfig.json"
		]
	},
	"plugins": [
		"@typescript-eslint",
		"jest"
	],
	"rules": {
		"import/extensions": [
			"error",
			"ignorePackages",
			{
				"js": "never",
				"jsx": "never",
				"ts": "never",
				"tsx": "never",
				"": "never"
			}
		],
		"indent": [
			2,
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"max-len": [
			"error",
			{
				"code": 150
			}
		],
		"no-console": "off",
		"no-tabs": 0,
		"linebreak-style": [
			"error",
			"unix"
		]
	},
	"settings": {
		"import/resolver": {
			"typescript": {}
		}
	}
}